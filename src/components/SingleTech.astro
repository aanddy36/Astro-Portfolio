---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  logo: CollectionEntry<"logos">;
}

const { logo } = Astro.props;
---

<div
  class="flex flex-col items-center min-h-[100px] laptop:min-h-[130px] gap-1 laptop:gap-3"
>
  <Image
    src={logo.data.logo}
    alt={`${logo.data.name} logo`}
    class={`max-w-[50px]`}
  />
  <span
    class="text-xs tablet:text-sm laptop:text-base text-center font-light tracking-wider text-[#ffffff96]"
  >
    {logo.data.name}
  </span>
</div>
