---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const about = await getCollection("about");
---

<div id="about" class="flex flex-col items-center w-[90%] mx-auto pb-20 pt-28">
  <h3 class="text-3xl laptop:text-5xl tablet:text-4xl font-bold text-center">
    About
  </h3>
  <div class="grid grid-cols-2 laptop:grid-cols-3 full:grid-cols-4 mt-5">
    {
      about.map((fact) => (
        <div
          class="rounded-xl bg-[#291731] flex flex-col items-center m-2 h-[200px] p-4 
        justify-around"
        >
          <Image
            src={fact.data.icon}
            alt={fact.data.sentence}
            class="w-12 laptop:w-14"
          />
          <span class="text-center text-xs laptop:text-sm full:text-base">
            {fact.data.sentence}
          </span>
        </div>
      ))
    }
  </div>
</div>
